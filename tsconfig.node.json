{
    "compilerOptions": {
        "target": "ES2023",
        "lib": ["ES2023"],
        "module": "ESNext",
        "types": ["node"],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,
        "strict": true,
        "allowJs": true
    },
    "include": ["vite.config.ts", "eslint.config.js", "jest.config.js"]
}
